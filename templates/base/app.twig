<!doctype html>
<html lang="{{ site.language }}">
<head>
    {% block head %}
    {% include 'base/helpers/head.twig' %}
    {% endblock %}
    {{ fn('wp_head') }}
</head>
<body {{ fn('body_class') }}>
<main id="wine-app">
    {% block header %}
    {% include 'base/helpers/header.twig' %}
    {% endblock %}

    {% block content %}{{ post.content }}{% endblock %}

    {% block footer %}
    {% include 'base/helpers/footer.twig' %}
    {% endblock footer %}
</main>

{{ fn('wp_footer') }}
</body>
</html>
