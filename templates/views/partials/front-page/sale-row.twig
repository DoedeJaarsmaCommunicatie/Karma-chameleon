<section class="container mx-auto px-4 lg:px-0">
    <div class="lg:flex lg:justify-between my-4" id="row_top_{{ post.ID }}">
        {% if kiyoh %}
            <kiyoh-card class="lg:w-1/5 mb-2"></kiyoh-card>
            {% for post in posts|slice(0,3) %}
                <product-card class="lg:w-1/5" :product-id="{{ post.ID }}"></product-card>
            {% endfor %}
        {% else %}
            {% for post in posts %}
                <product-card class="lg:w-1/5" :product-id="{{ post.ID }}"></product-card>
            {% endfor %}
        {% endif %}

        <card-component
                tag="a"
                link="https://kiyoh.nl/"
                inner-button="true"
                class="lg:w-1/6"
        >
                <span class="text-xl text-primary text-center font-bold">
                    Bekijk alle aanbiedingen.
                </span>
        </card-component>
    </div>
</section>
