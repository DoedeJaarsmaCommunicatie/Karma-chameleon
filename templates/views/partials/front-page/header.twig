{% set _headerBackground = post.thumbnail %}

<header
        data-title="{{ post.meta('title') }}"
        data-subtitle="{{ post.meta('subtitle') }}"
        title="{{ post.meta('title') }}"
        class="homepage-header{{ fn('wp_is_mobile')? 'mobile': '' }}"

        style="background-image: url({{ _headerBackground.src('large') }})"
>
    <div class="container mx-auto">

        <h1 class="title">{{ post.meta('title') }}</h1>
        <h3 class="subtitle">{{ post.meta('subtitle') }}</h3>
        <aside class="lg:w-1/3">
            <homepage-filter title="Ik ben op zoek naar:"></homepage-filter>
        </aside>
    </div>



    <aside
            role="complementary"
            class="usp-banner"
    >
        <span class="lg:mr-4">
            <i class="fas fa-shipping-fast mr-2"></i>{{ theme.theme_mod('shipping_fee', 'Gratis verzending vanaf â‚¬ 50,-') }}
        </span>

        <span>
            <i class="far fa-clock mr-2"></i>{{ theme.theme_mod('delivery_time', 'Voor 15:00 besteld, dezelfde werkdag verzonden.') }}
        </span>
    </aside>
</header>
