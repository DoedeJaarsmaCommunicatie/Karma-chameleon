{% extends 'base/app.twig' %}

{% block content %}
    <div class="container mx-auto">
        <div class="flex">
            <button class="filter-opener" type="button">
                <i class="fas fa-filter"></i>
            </button>
            <div class="product-filter">

                <div class="product-filter_content">
                    {{ theme.theme_mod('store_filter')|shortcodes }}
                </div>
            </div>
            <div class="lg:w-3/4 products px-4 lg:px-0">
                {% for product in products %}
                    <product-card :product-id="{{ product.id }}"></product-card>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
